<main class="main">
  <div class="inner">
    <!-- ログインしているときの表示 -->
    <div class="greeting"> 
      <% if current_user %>
        こんにちは、<%= link_to "#{current_user.name}さん",user_path(current_user), class: :greeting__link %>
      <% end %>
    </div>
    <!-- データの表示 -->
    <div class="card__wrapper">
<% @prototypes.each do |prototype| %>
  <div class="card">
    <%= link_to prototype_path(prototype) do %>
      <%= image_tag prototype.image, class: :card__img if prototype.image.attached? %>
    <% end %>
    <div class="card__body">
      <%= link_to prototype.title, prototype_path(prototype), class: :card__title %>
      <p class="card__summary">
        <%= prototype.catch_copy %>
      </p>
      <%= link_to "by #{prototype.user.name}", user_path(prototype.user), class: :card__user %>
    </div>
  </div>
<% end %>
    </div>
  </div>
</main>